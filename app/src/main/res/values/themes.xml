<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Konkura" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="fontFamily">@font/peyda</item>

        <item name="android:statusBarColor">@color/bgColorWhite</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="BottomNavTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextInactive</item>
    </style>

    <style name="Theme.MyApp.BottomNav" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="bottomNavigationStyle">@style/BottomNavStyle</item>

    </style>


</resources>
